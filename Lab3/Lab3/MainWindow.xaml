<Window x:Name="RootWindow" x:Class="Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3"
        mc:Ignorable="d"
        Title="Calculator" WindowStartupLocation="CenterScreen" MinWidth="300" MinHeight="400" Width="300" Height="400">
    <Grid x:Name="GridDivideWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5
                           *"/>
        </Grid.RowDefinitions>
        <Grid x:Name="GridCalcButtons" UseLayoutRounding="False" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="One" Content="1" Grid.Row="3"/>
            <Button x:Name="Three" Grid.Column="2" Content="3" Grid.Row="3"/>
            <Button x:Name="Plus" Grid.Column="3" Content="+" Grid.Row="3"/>
            <Button x:Name="SquareRoot" Grid.Column="4" Content="Sqrt" Grid.Row="2"/>
            <Button x:Name="Power" Grid.Column="4" Content="Power" Grid.Row="3"/>
            <Button x:Name="ZeroDouble" Content="00" Grid.Row="5"/>
            <Button x:Name="Four" Content="4" Grid.Row="2"/>
            <Button x:Name="Minus" Content="-" Grid.Row="2" Grid.Column="3"/>
            <Button x:Name="Five" Content="5" Grid.Row="2" Grid.Column="1"/>
            <Button x:Name="Seven" Content="7" Grid.Row="1"/>
            <Button x:Name="Six" Content="6" Grid.Row="2" Grid.Column="2"/>
            <Button x:Name="Zero" Content="0" Grid.Row="5" Grid.Column="1"/>
            <Button x:Name="Two" Content="2" Grid.Row="3" Grid.Column="1"/>
            <Button x:Name="Dot" Content="." Grid.Row="5" Grid.Column="2"/>
            <Button x:Name="Ln" Content="ln" Grid.Row="5" Grid.Column="4"/>
            <Button x:Name="Equals" Content="=" Grid.Row="5" Grid.Column="3"/>
            <Button x:Name="Eight" Content="8" Grid.Row="1" Grid.Column="1"/>
            <Button x:Name="Nine" Content="9" Grid.Row="1" Grid.Column="2"/>
            <Button x:Name="Multiply" Content="*" Grid.Row="1" Grid.Column="3"/>
            <Button x:Name="E" Content="e" Grid.Row="1" Grid.Column="4"/>
            <Button x:Name="CE" Content="CE"/>
            <Button x:Name="C" Content="C" Grid.Column="1"/>
            <Button x:Name="DeleteLast" Content="&lt;|" Grid.Column="2"/>
            <Button x:Name="Divide" Content="/" Grid.Column="3"/>
            <Button x:Name="Pi" Content="Pi" Grid.Column="4"/>

        </Grid>
        <Grid x:Name="GridShowBar">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4
                                  *"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="AdditionPanel" Content="-=-" Click="AdditionPanel_Click"/>
        </Grid>
        <Grid x:Name="GridOutput" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="Output1" TextWrapping="Wrap" Text="TextBlock" FontFamily="Arial" FontSize="20" TextAlignment="Center" Background="#FFD6D6D6" Grid.Row="1"/>
            <TextBlock x:Name="Output2" TextWrapping="Wrap" Text="TextBlock" FontFamily="Arial" FontSize="20" TextAlignment="Center" Background="#FFD6D6D6" UseLayoutRounding="False"/>
        </Grid>
    </Grid>
</Window>
